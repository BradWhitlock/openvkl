{
  varying bool mask = __mask;
  unmasked
  {
    varying int imask = mask ? -1 : 0;
  }
  if (sizeof(varying float) == 32) {
    varying int iresult;
    vlyIterateSurface8(
        (uniform int *uniform) & imask, rayIterator, surfaceHit, &iresult);

