#pragma once

#include "common.isph"
#include "samples_mask.isph"
#include "volume.isph"

struct RayIterator;
typedef varying RayIterator *uniform VLYRayIterator;

VLY_API VLYRayIterator
vlyNewRayIterator8(const int *uniform valid,
                   VLYVolume volume,
                   const varying vly_vec3f *uniform origin,
                   const varying vly_vec3f *uniform direction,
                   const varying vly_range1f *uniform tRange,
                   VLYSamplesMask samplesMask);

VLY_FORCEINLINE VLYRayIterator
vlyNewRayIteratorV(VLYVolume volume,
                   const varying vly_vec3f *uniform origin,
                   const varying vly_vec3f *uniform direction,
                   const varying vly_range1f *uniform tRange,
                   VLYSamplesMask samplesMask)
{
  varying bool mask = __mask;
  unmasked
  {
    varying int imask = mask ? -1 : 0;
  }

  if (sizeof(varying float) == 32) {
    return vlyNewRayIterator8((uniform int *uniform) & imask,
                              volume,
                              origin,
                              direction,
                              tRange,
                              samplesMask);
  }
}

struct VLYRayInterval
{
  vly_range1f tRange;
  float nominalDeltaT;
  // TODO: output samples mask when needed
};

VLY_API void vlyIterateInterval8(const int *uniform valid,
                                 VLYRayIterator rayIterator,
                                 varying VLYRayInterval *uniform rayInterval,
                                 varying int *uniform result);

VLY_FORCEINLINE varying bool vlyIterateIntervalV(
    VLYRayIterator rayIterator, varying VLYRayInterval *uniform rayInterval)
{
  varying bool mask = __mask;
  unmasked
  {
    varying int imask = mask ? -1 : 0;
  }
  if (sizeof(varying float) == 32) {
    varying int iresult;
    vlyIterateInterval8(
        (uniform int *uniform) & imask, rayIterator, rayInterval, &iresult);

    varying bool result = iresult ? true : false;

    return result;
  }
}

struct VLYSurfaceHit
{
  float t;
  float sample;
};

VLY_API void vlyIterateSurface8(const int *uniform valid,
                                VLYRayIterator rayIterator,
